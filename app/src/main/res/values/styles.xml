    <style name="Theme_Light_CustomDialog_Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_common_toast</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>



    <style name="Group_member_operation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">68.0dip</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/system_button_selector</item>
        <item name="android:textColor">@color/ccp_green</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textColorHint">@color/text_desc</item>
        <item name="android:background">@drawable/edittext_bg_selector</item>
        <item name="android:cursorVisible">true</item>
    </style>


    <!--任务管理，字体布局样式-->
    <style name="task_text_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/darkorange</item>
        <item name="android:layout_marginStart">@dimen/dimen_15</item>
    </style>

    <!--办公用品申请添加-->
    <style name="office_add_line_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--AddOfficeApplianceDialog Theme-->
    <style name="AddOfficeApplianceDialog" parent="@android:style/Theme.Dialog">
        <!--背景颜色以及透明度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮在Activity之上-->
        <item name="android:windowIsFloating">true</item>
        是否模糊
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--公务接待-->
    <style name="office_title_text">
        <item name="android:textColor">@color/text_color2</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="office_content_text">
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="office_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="style_line_vertical_no_gap">
        <item name="android:layout_width">@dimen/dimen_0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--收件人Dialog-->
    <style name="AddresseeDialog" parent="android:style/Theme.Dialog">
        <!--<item name="android:background">@color/transparency</item>-->
        <!--<item name="android:windowBackground">@color/transparency</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
