<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_5">

    <TextView
        android:id="@+id/send_doc_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red" />


    <TextView
        android:id="@+id/send_doc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_doc_no"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="标题"
        android:textColor="@color/text_color1"
        android:textSize="@dimen/dimen_18" />

    <TextView
        android:id="@+id/send_doc_flow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/send_doc_title"

        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/selector_flow_btn"
        android:gravity="center"
        android:text="@string/base_flow"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/send_doc_addUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_doc_title"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_toLeftOf="@id/send_doc_flow"
        android:text="管理员"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/send_doc_fa_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_doc_addUser"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_3"
        android:layout_toLeftOf="@id/send_doc_flow"
        android:text="2016-06-24" />


</RelativeLayout>
