<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_progress_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/item_flow_line1"
                    android:layout_width="@dimen/dimen_2"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/line_color" />

                <View
                    android:id="@+id/item_flow_line2"
                    android:layout_width="@dimen/dimen_2"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/line_color" />
            </LinearLayout>

            <View
                android:id="@+id/item_flow_point"
                android:layout_width="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_10"
                android:layout_gravity="center"
                android:background="@drawable/shape_ovl" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/item_flow_line3"
                android:layout_width="@dimen/dimen_2"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/line_color" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_flow_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="start|center_vertical"
            android:text="流程1"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/item_flow_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_2"
            android:gravity="start|center_vertical"
            android:padding="@dimen/dimen_2"
            android:text="李真 -- 录入（2015-12-06 09:54:09）"
            android:textColor="@color/green"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@color/line_color" />
    </LinearLayout>
</LinearLayout>