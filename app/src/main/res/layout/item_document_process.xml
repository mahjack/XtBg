<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/comment_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5">

        <ImageView
            android:visibility="gone"
            android:id="@+id/document_process_iv"
            android:layout_width="120dp"
            android:layout_height="@dimen/dimen_60" />

        <TextView
            android:id="@+id/document_process_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/document_process_iv"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="111111"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/dimen_16" />

        <TextView
            android:id="@+id/document_process_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/document_process_text"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="111111"
            android:textColor="@color/text_color1"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/document_process_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/document_process_name"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_2"
            android:text="111111"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/dimen_14" />
    </RelativeLayout>
</LinearLayout>