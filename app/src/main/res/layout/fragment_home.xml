<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color">
        <TextView
            android:id="@+id/home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎您：某某"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_10"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_10"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5">
                    <FrameLayout
                        android:id="@+id/home_document"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/home_iv_document"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_document"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_document"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_document"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_document"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="visible"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/home_multipoint"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/home_iv_multipoint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_document"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_multipoint"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_multipoint"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_multipoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/home_supervise"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/home_iv_supervise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_document"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_supervise"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_supervise"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_supervise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5">

                    <FrameLayout
                        android:id="@+id/home_mail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="@dimen/dimen_5">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/home_iv_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_mail"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/home_mail"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_mail"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/home_meeting"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/home_iv_meeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_document"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_meeting"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_meeting"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_meeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/home_attendance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dimen_5"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/home_iv_attendance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_document"
                                android:layout_centerHorizontal="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_attendance"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_attendance"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_attendance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/home_read"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/selector_ll"
                        android:padding="@dimen/dimen_5">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <ImageView
                                android:id="@+id/home_iv_read"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/home_read"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_read"
                                android:textSize="@dimen/dimen_16"
                                android:textColor="@color/text_color2"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:layout_below="@id/home_iv_read"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/home_unread_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@drawable/shape_red"
                            android:layout_gravity="end"
                            android:visibility="gone"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/home_check"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="@dimen/dimen_5">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/home_updata"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sliding_check"
                            android:textSize="@dimen/dimen_16"
                            android:textColor="@color/text_color2"
                            android:layout_marginTop="@dimen/dimen_5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_about"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/selector_ll"
                        android:padding="@dimen/dimen_5">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/home_about"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sliding_about"
                            android:textSize="@dimen/dimen_16"
                            android:textColor="@color/text_color2"
                            android:layout_marginTop="@dimen/dimen_5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recycle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:visibility="visible"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:visibility="gone">
                <android.support.v4.view.ViewPager
                    android:id="@+id/daily_vp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:gravity="center" >

                        <View
                            android:id="@+id/v_dot0"
                            style="@style/dot_style"
                            android:background="@drawable/shape_dot_press" />

                        <View
                            android:id="@+id/v_dot1"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot2"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot3"
                            style="@style/dot_style" />

                        <View
                            android:id="@+id/v_dot4"
                            style="@style/dot_style" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:visibility="gone"
                android:background="@color/gainsboro"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>