<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_ll"
    android:paddingStart="@dimen/dimen_15"
    android:paddingEnd="@dimen/dimen_15">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_70"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/dimen_18sp"/>
        <TextView
            android:id="@+id/item_tel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            style="@style/style_text1"
            android:text="未知"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_card_btn"
        android:text="@string/address_message"
        android:textColor="@color/text_color2"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>