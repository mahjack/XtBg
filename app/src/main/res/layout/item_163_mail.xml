<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_5">

    <TextView
        android:id="@+id/mail_163_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-07-25 08:58:59"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/mail_163_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_163_time"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="岚山政务信息"
        android:textColor="@color/text_color1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mail_163_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mail_163_title"
        android:text="月亮"
        android:textColor="@color/text_color1" />

    <TextView
        android:id="@+id/mail_163_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mail_163_name"
        android:text="rzghk@126.com" />


</RelativeLayout>
