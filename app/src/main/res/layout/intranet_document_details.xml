<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/details_header"
        layout="@layout/activity_header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/details_header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15">

                    <TextView
                        style="@style/style_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/intranet_title" />

                    <TextView
                        android:id="@+id/details_title"
                        style="@style/style_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="start" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:id="@+id/details_num_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15">

                        <TextView
                            style="@style/style_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="@string/intranet_no."
                            android:textColor="@color/red" />

                        <TextView
                            android:id="@+id/details_num"
                            style="@style/style_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="start"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15">

                    <TextView
                        style="@style/style_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/intranet_sender"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/details_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/dimen_16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_15">

                    <TextView
                        style="@style/style_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/intranet_time" />

                    <TextView
                        android:id="@+id/details_time"
                        style="@style/style_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:id="@+id/details_word_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15">

                        <TextView
                            style="@style/style_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="@string/intranet_theme" />

                        <TextView
                            android:id="@+id/details_word"
                            style="@style/style_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="start"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_content_lin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15">

                    <TextView
                        android:id="@+id/details_content_txt"
                        style="@style/style_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/intranet_content" />

                    <TextView
                        android:id="@+id/details_content"
                        style="@style/style_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mail_ll_appendix"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />

                <com.sdzx.xtbg.view.NoScrollListView
                    android:id="@+id/file_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:cacheColorHint="@null"
                    android:divider="@color/line_color"
                    android:dividerHeight="@dimen/dimen_0.5" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_0.5"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingBottom="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_5">

                <Button
                    android:id="@+id/in_doc_relay_to_doc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_login_btn"
                    android:text="转到公文"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>