                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/line_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bg"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/style_text1"
                    android:text="办公室负责人意见：" />

                <View style="@style/style_line_vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/iv_depart_opinion_sign1"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/dimen_60" />

                    <TextView
                        android:id="@+id/tv_bgs_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_depart_opinion_sign1"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_bgs_opinion_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_bgs_opinion"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_bgs_opinion_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_bgs_opinion_name"
                        android:paddingTop="@dimen/dimen_5" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_attendance_hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/snow"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/style_text1"
                    android:text="分管负责人意见：" />

                <View style="@style/style_line_vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/iv_hr_opinion_sign"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/dimen_60" />

                    <TextView
                        android:id="@+id/tv_hr_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_hr_opinion_sign"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_depart_hr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_hr_opinion"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_depart_hr_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_depart_hr_name"
                        android:paddingTop="@dimen/dimen_5" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_15">

                <TextView
                    style="@style/style_text1"
                    android:text="主要领导意见：" />

                <View style="@style/style_line_vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/iv_minor_opinion_sign"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/dimen_60" />

                    <TextView
                        android:id="@+id/tv_minor_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_minor_opinion_sign"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_depart_minor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_minor_opinion"
                        android:paddingTop="@dimen/dimen_5" />

                    <TextView
                        android:id="@+id/tv_depart_minor_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_depart_minor_name"
                        android:paddingTop="@dimen/dimen_5" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/line_color" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="@dimen/dimen_15">-->

            <!--<TextView-->
